        <android.support.v7.widget.CardView
            android:id="@+id/card_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/card_image"
                    android:layout_width="match_parent"
                    android:layout_height="200dp" />


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/default_margin">

                    <TextView
                        android:id="@+id/card_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="title"
                        android:textColor="@color/black"
                        android:textSize="@dimen/large_text_size"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/card_description"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/card_title"
                        android:text="description"
                        android:textColor="@color/black"
                        android:textSize="@dimen/medium_text_size"
                        android:maxLines="3"
                        android:ellipsize="end"/>


                    <TextView
                        android:id="@+id/card_length"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="3dp"
                        android:layout_marginTop="6dp"
                        android:text="6 minute read"
                        android:textSize="@dimen/small_text_size"
                        android:layout_below="@id/card_description"/>

                    <TextView
                        android:id="@+id/card_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="3dp"
                        android:layout_marginTop="6dp"
                        android:text=" â€¢ 3 hours ago"
                        android:textSize="@dimen/small_text_size"
                        android:layout_toRightOf="@id/card_length"
                        android:layout_toEndOf="@id/card_length"
                        android:layout_below="@id/card_description"/>

                    <com.like.LikeButton
                        android:id="@+id/card_star_button"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_below="@id/card_description"


                        app:icon_type="Star"
                        app:circle_start_color="@color/colorPrimary"
                        app:circle_end_color="@color/colorAccent"
                        app:dots_primary_color="@color/colorAccent"
                        app:dots_secondary_color="@color/colorPrimary"
                        app:icon_size="15dp"
                        app:liked="false"
                        app:anim_scale_factor="2"
                        app:is_enabled="true" />

                </RelativeLayout>


            </LinearLayout>


        </android.support.v7.widget.CardView>

        <com.takusemba.multisnaprecyclerview.MultiSnapRecyclerView
            android:id="@+id/recycler_view_top_movers"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/default_margin"
            android:paddingTop="@dimen/default_margin"
            android:layout_below="@+id/card_view"/>

        <!--<TextView-->
        <!--android:id="@+id/top_news_text"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_below="@+id/recycler_view_top_movers"-->
        <!--android:paddingBottom="@dimen/default_margin"-->
        <!--android:text="Top News"-->
        <!--android:textColor="@color/black"-->
        <!--android:textSize="@dimen/header_text_size"-->
        <!--android:textStyle="bold" />-->


        <com.cooltechworks.views.shimmer.ShimmerRecyclerView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/shimmer_recycler_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/recycler_view_top_movers"
            android:nestedScrollingEnabled="false"
            app:shimmer_demo_angle="20"
            app:shimmer_demo_layout="@layout/item_shimmer_list"
            app:shimmer_demo_shimmer_color="@color/shimmer_color"
            app:shimmer_demo_view_holder_item_background="@drawable/bg_card" />

    </RelativeLayout>

</ScrollView>