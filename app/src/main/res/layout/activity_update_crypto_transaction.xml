<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/backgroundcolor"
    tools:context=".ui.transactions.crypto.CryptoTransactionActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/app_bar_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay"
        app:elevation="0dp">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?android:attr/actionBarSize"
            android:background="?attr/backgroundcolor"
            app:popupTheme="@style/AppTheme.PopupOverlay"
            app:titleTextColor="?attr/textcolor"
            tools:targetApi="lollipop">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingEnd="@dimen/default_margin">

                <TextView
                    android:id="@+id/toolbar_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text=""
                    android:textColor="?attr/textcolor"
                    android:textSize="@dimen/large_text_size"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/button_delete"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentEnd="true"
                    android:src="@drawable/baseline_delete_white_24"
                    android:visibility="visible" />

            </RelativeLayout>

        </androidx.appcompat.widget.Toolbar>

    </com.google.android.material.appbar.AppBarLayout>

    <include
        layout="@layout/content_crypto_transaction"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/layout_progress"
        android:layout_below="@id/app_bar_layout" />

    <LinearLayout
        android:id="@+id/layout_progress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical">

        <com.ekalips.fancybuttonproj.FancyButton
            android:id="@+id/progress_button_create_buy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="@dimen/default_margin"
            android:textAlignment="center"
            app:f_btnStyle="stroke_fill"
            app:f_capsText="false"
            app:f_fillColor="@color/light_green"
            app:f_hideFillAfterCollapse="false"
            app:f_progressColor="?attr/backgroundcolor"
            app:f_strokeColor="@color/green"
            app:f_strokeWidth="4"
            app:f_text="Add Transaction"
            app:f_textColor="@color/white"
            app:f_textSize="@dimen/large_text_size"
            android:visibility="visible"/>


        <com.ekalips.fancybuttonproj.FancyButton
            android:id="@+id/progress_button_create_sell"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:gravity="center"
            android:padding="@dimen/default_margin"
            android:textAlignment="center"
            app:f_btnStyle="stroke_fill"
            app:f_capsText="false"
            app:f_fillColor="@color/light_red"
            app:f_hideFillAfterCollapse="false"
            app:f_progressColor="?attr/backgroundcolor"
            app:f_strokeColor="@color/red"
            app:f_strokeWidth="4"
            app:f_text="Add Transaction"
            app:f_textColor="@color/white"
            app:f_textSize="@dimen/large_text_size"
            android:visibility="visible"/>


        <com.ekalips.fancybuttonproj.FancyButton
            android:id="@+id/progress_button_update_buy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="@dimen/default_margin"
            android:textAlignment="center"
            app:f_btnStyle="stroke_fill"
            app:f_capsText="false"
            app:f_fillColor="@color/light_green"
            app:f_hideFillAfterCollapse="false"
            app:f_progressColor="?attr/backgroundcolor"
            app:f_strokeColor="@color/green"
            app:f_strokeWidth="4"
            app:f_text="Update Transaction"
            app:f_textColor="@color/white"
            app:f_textSize="@dimen/large_text_size"
            android:visibility="visible"/>


        <com.ekalips.fancybuttonproj.FancyButton
            android:id="@+id/progress_button_update_sell"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:gravity="center"
            android:padding="@dimen/default_margin"
            android:textAlignment="center"
            app:f_btnStyle="stroke_fill"
            app:f_capsText="false"
            app:f_fillColor="@color/light_red"
            app:f_hideFillAfterCollapse="false"
            app:f_progressColor="?attr/backgroundcolor"
            app:f_strokeColor="@color/red"
            app:f_strokeWidth="4"
            app:f_text="Update Transaction"
            app:f_textColor="@color/white"
            app:f_textSize="@dimen/large_text_size"
            android:visibility="visible"/>

    </LinearLayout>

</RelativeLayout>