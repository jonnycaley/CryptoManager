<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/item_height"
        android:background="?attr/itemBackgroundColor"
        android:padding="@dimen/margin_base_horizontal"
        android:weightSum="100">

        <LinearLayout
            android:id="@+id/layout_left"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/default_margin"
            android:orientation="horizontal"
            android:layout_weight="30">

            <ImageView
                android:id="@+id/image"
                android:layout_width="30dp"
                android:layout_height="30dp" />

            <TextView
                android:id="@+id/currency"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/image"
                android:layout_gravity="center"
                android:layout_marginStart="@dimen/default_margin"
                android:text="BTC"
                android:textColor="?attr/textColor" />

            <!--<TextView-->
            <!--android:id="@+id/text_fiat"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:paddingStart="@dimen/extra_small_margin"-->
            <!--android:text="(Fiat)"-->
            <!--android:layout_toRightOf="@id/currency"-->
            <!--android:layout_below="@id/image"-->
            <!--android:visibility="gone" />-->

        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_holdings"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:weightSum="2"
            android:layout_weight="30">

            <TextView
                android:id="@+id/value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:gravity="end"
                android:text="$7000"
                android:maxLines="1"
                android:textColor="?attr/textColor" />

            <TextView
                android:id="@+id/holding"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:gravity="end"
                android:text="(0.9650000 BTC)"
                android:maxLines="1"
                android:textColor="?attr/textColorSecondary" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_change"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:orientation="vertical"
            android:layout_weight="40">

            <TextView
                android:id="@+id/change"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_alignParentEnd="true"
                android:layout_gravity="end"
                android:layout_weight="1"
                android:text="-$3"
                android:textColor="?attr/textColor"
                android:visibility="visible" />


            <TextView
                android:id="@+id/price"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_below="@id/change"
                android:layout_alignParentEnd="true"
                android:layout_gravity="end"
                android:layout_weight="1"
                android:text="$138.68"
                android:textColor="?attr/textColor" />

        </LinearLayout>
    </LinearLayout>

    <include layout="@layout/item_border" />

</LinearLayout>