<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="?attr/backgroundcolor">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="@dimen/item_height_medium"
        android:paddingStart="@dimen/margin_base_horizontal"
        android:paddingEnd="@dimen/margin_base_horizontal"
        android:gravity="center">

        <TextView
            android:id="@+id/setting"
            android:textColor="?attr/textColor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Setting" />

    </RelativeLayout>

    <include
        layout="@layout/item_border"
        android:id="@+id/layout_border"
        android:visibility="gone"/>

    <include
        layout="@layout/item_border"
        android:id="@+id/layout_border_partial"
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:layout_marginStart="@dimen/margin_base_horizontal"
        android:visibility="gone"/>

</LinearLayout>