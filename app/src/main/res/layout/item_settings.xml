<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="?attr/itemBackgroundColor">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/margin_item_horizontal"
        android:paddingTop="@dimen/margin_item_vertical"
        android:paddingRight="@dimen/margin_item_horizontal"
        android:paddingBottom="@dimen/margin_item_vertical">

        <TextView
            android:id="@+id/setting"
            android:textColor="?attr/textColor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Setting" />

    </RelativeLayout>


    <include
        layout="@layout/item_border"/>

</LinearLayout>