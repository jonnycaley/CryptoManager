<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/tools"
    xmlns:swiperefresh="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/layout_progress" />

    <android.support.v4.widget.SwipeRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/swipelayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone">

        <android.support.v4.widget.NestedScrollView
            android:id="@+id/nested_scroll_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:animateLayoutChanges="true"
                android:orientation="vertical">
                <!--blocksDescendants stops view from automatically scrolling to recyclerview ||| However, it prevents searchview from becoming clickable so i took it out-->


                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/card_margin_small"
                    android:layout_marginBottom="@dimen/card_margin_small"
                    app:cardCornerRadius="@dimen/card_corner_radius"
                    app:cardUseCompatPadding="true">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="?attr/cardbackground"
                        android:orientation="horizontal"
                        android:padding="@dimen/default_margin"
                        android:weightSum="3">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Market Cap"
                                android:textColor="?attr/textcolor" />

                            <TextView
                                android:id="@+id/text_market_cap"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="$120.65 B"
                                android:textColor="?attr/textcolor"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/text_market_cap_percentage"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="(+6.9%)"
                                android:textSize="@dimen/small_text_size"
                                android:visibility="gone" />

                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="24h Volume"
                                android:textColor="?attr/textcolor" />

                            <TextView
                                android:id="@+id/text_volume"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="$20.65 B"
                                android:textColor="?attr/textcolor"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/text_volume_percentage"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="(+6.9%)"
                                android:textColor="?attr/textcolor"
                                android:textSize="@dimen/small_text_size"
                                android:visibility="gone" />

                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="BTC Dominance"
                                android:textColor="?attr/textcolor" />

                            <TextView
                                android:id="@+id/text_btc_dominance"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="53.21%"
                                android:textColor="?attr/textcolor"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/text_btc_dominance_percentage"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="(+6.9%)"
                                android:textSize="@dimen/small_text_size"
                                android:visibility="gone" />

                        </LinearLayout>

                    </LinearLayout>

                </android.support.v7.widget.CardView>


                <TextView
                    android:id="@+id/text_top_100"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/small_margin"
                    android:layout_marginBottom="@dimen/small_margin"
                    android:text="Top 100"
                    android:textColor="@color/text_grey"
                    android:textSize="@dimen/medium_text_size"
                    android:visibility="gone" />


                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/card_margin_small"
                    android:layout_marginBottom="@dimen/card_margin_small"
                    app:cardCornerRadius="@dimen/card_corner_radius"
                    app:cardUseCompatPadding="true">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:weightSum="100"
                        android:background="?attr/cardbackground">

                        <SearchView
                            android:id="@+id/search_view_currencies"
                            android:layout_width="0dp"
                            android:layout_height="50dp"
                            android:layout_alignParentStart="true"
                            android:layout_weight="64"
                            android:background="?attr/cardbackground" />

                        <TextView
                            android:id="@+id/text_1H"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="12"
                            android:gravity="center"
                            android:paddingStart="@dimen/small_margin"
                            android:paddingTop="@dimen/small_margin"
                            android:paddingEnd="@dimen/small_margin"
                            android:paddingBottom="@dimen/small_margin"
                            android:text="1H"
                            android:textColor="?attr/textcolor"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/text_1D"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="12"
                            android:gravity="center"
                            android:paddingStart="@dimen/small_margin"
                            android:paddingTop="@dimen/small_margin"
                            android:paddingEnd="@dimen/small_margin"
                            android:paddingBottom="@dimen/small_margin"
                            android:text="1D"
                            android:textColor="?attr/textcolor" />

                        <TextView
                            android:id="@+id/text_1W"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="12"
                            android:gravity="center"
                            android:paddingStart="@dimen/small_margin"
                            android:paddingTop="@dimen/small_margin"
                            android:paddingEnd="@dimen/small_margin"
                            android:paddingBottom="@dimen/small_margin"
                            android:text="1W"
                            android:textColor="?attr/textcolor" />

                    </LinearLayout>

                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/card_margin_small"
                    android:layout_marginBottom="@dimen/card_margin_small"
                    android:visibility="visible"
                    app:cardCornerRadius="@dimen/card_corner_radius"
                    app:cardUseCompatPadding="true">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="?attr/cardbackground">

                            <TextView
                                android:id="@+id/rank"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingStart="@dimen/small_margin"
                                android:paddingTop="@dimen/small_margin"
                                android:paddingBottom="@dimen/small_margin"
                                android:text="#"
                                android:textColor="?attr/textcolor"
                                android:textStyle="bold" />


                            <TextView
                                android:id="@+id/name"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_toEndOf="@id/rank"
                                android:paddingStart="@dimen/default_margin"
                                android:paddingTop="@dimen/small_margin"
                                android:paddingBottom="@dimen/small_margin"
                                android:text="Name (Symbol)"
                                android:textColor="?attr/textcolor" />

                            <TextView
                                android:id="@+id/symbol"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_toRightOf="@id/name"
                                android:text=""
                                android:textColor="@color/light_grey" />

                            <TextView
                                android:id="@+id/price"
                                android:layout_width="70dp"
                                android:layout_height="wrap_content"
                                android:layout_toLeftOf="@id/change"
                                android:gravity="end"
                                android:paddingTop="@dimen/small_margin"
                                android:paddingEnd="@dimen/default_margin"
                                android:paddingBottom="@dimen/small_margin"
                                android:text="Price"
                                android:textColor="?attr/textcolor" />


                            <TextView
                                android:id="@+id/change"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentEnd="true"
                                android:layout_alignParentRight="true"
                                android:ellipsize="end"
                                android:gravity="center"
                                android:maxLines="1"
                                android:paddingTop="@dimen/small_margin"
                                android:paddingEnd="@dimen/small_margin"
                                android:paddingBottom="@dimen/small_margin"
                                android:text="Change"
                                android:textAlignment="center"
                                android:textColor="?attr/textcolor" />

                        </RelativeLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0.5dp"
                            android:background="@color/light_grey" />

                        <RelativeLayout
                            android:id="@+id/layout_functions"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/small_margin"
                            android:layout_marginBottom="@dimen/small_margin"
                            android:visibility="gone">


                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:text="Top 100"
                                android:textColor="?attr/textcolor" />

                            <TextView
                                android:id="@+id/text_markets"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_toStartOf="@id/text_gain"
                                android:text="USD" />

                            <TextView
                                android:id="@+id/text_gain"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_alignParentEnd="true"
                                android:text="Change" />

                        </RelativeLayout>

                        <android.support.v7.widget.RecyclerView
                            android:id="@+id/recycler_view_currencies"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:nestedScrollingEnabled="false" />

                        <ProgressBar
                            android:id="@+id/progress_bar_bottom"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />

                    </LinearLayout>

                </android.support.v7.widget.CardView>

            </LinearLayout>

        </android.support.v4.widget.NestedScrollView>

    </android.support.v4.widget.SwipeRefreshLayout>

</LinearLayout>