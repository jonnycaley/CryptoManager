<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/tools"
    xmlns:swiperefresh="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include layout="@layout/layout_progress" />

    <android.support.v4.widget.SwipeRefreshLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/swipelayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone">

        <android.support.v4.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/nested_scroll_view">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:animateLayoutChanges="true"
                android:orientation="vertical"
                android:descendantFocusability="blocksDescendants">
<!--blocksDescendants stops view from automatically scrolling to recyclerview-->

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="3"
                    android:padding="@dimen/default_margin">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Market Cap" />

                        <TextView
                            android:id="@+id/text_market_cap"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="$120.65 B"
                            android:textColor="@color/black"
                            android:textStyle="bold"/>

                        <TextView
                            android:id="@+id/text_market_cap_percentage"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="(+6.9%)"
                            android:textSize="@dimen/small_text_size"/>

                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="24h Volume" />

                        <TextView
                            android:id="@+id/text_volume"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="$20.65 B"
                            android:textColor="@color/black"
                            android:textStyle="bold"/>

                        <TextView
                            android:id="@+id/text_volume_percentage"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="(+6.9%)"
                            android:textSize="@dimen/small_text_size" />

                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="BTC Dominance" />

                        <TextView
                            android:id="@+id/text_btc_dominance"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="53.21%"
                            android:textColor="@color/black"
                            android:textStyle="bold"/>

                        <TextView
                            android:id="@+id/text_btc_dominance_percentage"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="(+6.9%)"
                            android:textSize="@dimen/small_text_size" />

                    </LinearLayout>

                </LinearLayout>

                <SearchView
                    android:id="@+id/search_view_currencies"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:background="?attr/cardbackground"
                    android:visibility="gone"/>
                <!--android:gravity="end"-->
                <!--android:layout_gravity="end"-->

                <TextView
                    android:id="@+id/text_latest_news"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/small_margin"
                    android:layout_marginBottom="@dimen/small_margin"
                    android:text="Latest News"
                    android:textColor="@color/text_grey"
                    android:textSize="@dimen/medium_text_size"
                    android:visibility="gone"/>

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/recycler_view_latest_news"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:nestedScrollingEnabled="false"
                    android:visibility="gone"/>


                <TextView
                    android:id="@+id/text_top_100"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/small_margin"
                    android:layout_marginBottom="@dimen/small_margin"
                    android:text="Top 100"
                    android:textColor="@color/text_grey"
                    android:textSize="@dimen/medium_text_size"
                    android:visibility="gone" />


                <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/card_margin_small"
                    android:layout_marginBottom="@dimen/card_margin_small"
                    app:cardCornerRadius="@dimen/card_corner_radius"
                    app:cardUseCompatPadding="true">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">


                        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingLeft="@dimen/small_margin"
                            android:paddingTop="@dimen/small_margin"
                            android:paddingRight="@dimen/small_margin"
                            android:paddingBottom="@dimen/small_margin"
                            android:background="?attr/cardbackground">

                            <TextView
                                android:id="@+id/rank"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="#"
                                android:textColor="?attr/textcolor" />

                            <TextView
                                android:id="@+id/name"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/default_margin"
                                android:layout_toRightOf="@id/rank"
                                android:text="Name (Symbol)"
                                android:textColor="?attr/textcolor"/>

                            <TextView
                                android:id="@+id/symbol"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_toRightOf="@id/name"
                                android:text=""
                                android:textColor="@color/light_grey" />

                            <TextView
                                android:id="@+id/price"
                                android:layout_width="70dp"
                                android:layout_height="wrap_content"
                                android:layout_marginEnd="@dimen/default_margin"
                                android:layout_toLeftOf="@id/percentage"
                                android:gravity="end"
                                android:text="Price"
                                android:textColor="?attr/textcolor" />


                            <TextView
                                android:id="@+id/percentage"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentEnd="true"
                                android:layout_alignParentRight="true"
                                android:ellipsize="end"
                                android:gravity="center"
                                android:maxLines="1"
                                android:text="Change"
                                android:textAlignment="center"
                                android:textColor="?attr/textcolor" />

                        </RelativeLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0.5dp"
                            android:background="@color/light_grey" />

                        <RelativeLayout
                            android:id="@+id/layout_functions"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/small_margin"
                            android:layout_marginBottom="@dimen/small_margin"
                            android:visibility="gone">


                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:text="Top 100"
                                android:textColor="?attr/textcolor" />

                            <TextView
                                android:id="@+id/text_markets"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_toStartOf="@id/text_gain"
                                android:text="USD" />

                            <TextView
                                android:id="@+id/text_gain"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_alignParentEnd="true"
                                android:text="Change" />

                        </RelativeLayout>

                        <android.support.v7.widget.RecyclerView
                            android:id="@+id/recycler_view_currencies"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:nestedScrollingEnabled="false" />

                        <ProgressBar
                            android:id="@+id/progress_bar"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />

                    </LinearLayout>

                </android.support.v7.widget.CardView>

            </LinearLayout>

        </android.support.v4.widget.NestedScrollView>

    </android.support.v4.widget.SwipeRefreshLayout>

</RelativeLayout>