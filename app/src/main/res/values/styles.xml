<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Light/Day mode theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->

        <item name="colorPrimary">@color/theme_color</item>
        <item name="colorPrimaryOpacity20">@color/theme_color_opacity_20</item>

        <item name="textColor">@color/light_text_color</item>
        <item name="textColorSecondary">@color/light_text_color_secondary</item>
        <item name="textColorDivider">@color/dark_text_color_secondary</item>

        <item name="android:typeface">monospace</item>


        <item name="backgroundcolor">#FFFFFF</item>
        <item name="secondaryBackgroundColor">#E6EBEF</item>

        <item name="iconGrey">#B9B9B9</item>
        <item name="iconBlack">#000000</item>

        <item name="dividerColor">@color/light_divider_color</item>

        <item name="android:statusBarColor" tools:targetApi="lollipop">#fcfcfc</item>

        <item name="android:windowAnimationStyle">@style/WindowAnimationTransition</item>

        <item name="colorAccent">?attr/colorPrimary</item>


        <item name="android:textColorHint">@color/dark_text_color_secondary</item>
        <item name="android:editTextColor">@color/dark_text_color</item>

        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@color/transparent</item>

        <!--<item name="tintcolor">#ffffff</item>-->
        <!--<item name="navigationBorder">#5E989F</item>-->
        <!--<item name="colorControlNormal">#000000</item>-->
        <!--<item name="android:actionMenuTextColor">#000000</item>-->
        <!--<item name="colorPrimaryDark">#303F9F</item>-->
        <!--<item name="primarycolor">#000000</item>-->
        <!--<item name="secondarycolor">#000000</item>-->
        <!--<item name="android:textColor">#000000</item>-->

    </style>

    <!-- Dark/Night mode theme. -->

    <style name="darktheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/theme_color</item>
        <item name="colorPrimaryOpacity20">@color/theme_color_opacity_20</item>



        <item name="textColor">@color/dark_text_color</item>
        <item name="textColorSecondary">@color/dark_text_color_secondary</item>
        <item name="textColorDivider">@color/light_text_color_secondary</item>

        <item name="android:typeface">monospace</item>

        <item name="backgroundcolor">#000000</item>
        <item name="secondaryBackgroundColor">#121617</item>

        <item name="iconGrey">#515151</item>
        <item name="iconBlack">#000000</item>

        <item name="dividerColor">@color/dark_divider_color</item>

        <item name="android:statusBarColor" tools:targetApi="lollipop">#000000</item>

        <item name="android:windowAnimationStyle">@style/WindowAnimationTransition</item>

        <item name="colorAccent">?attr/colorPrimary</item>

        <item name="android:textColorHint">@color/dark_text_color_secondary</item>
        <item name="android:editTextColor">@color/light_text_color</item>

        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@color/transparent</item>

        <!--<item name="tintcolor">#ffffff</item>-->
        <!--<item name="navigationBorder">#5E989F</item>-->
        <!--<item name="colorControlNormal">#ffffff</item>-->
        <!--<item name="android:actionMenuTextColor">#ffffff</item>-->
        <!--<item name="android:textColor">#000000</item>-->
        <!--<item name="colorPrimaryDark">#000000</item>-->
        <!--<item name="colorAccent">?attr/colorPrimary</item>-->
        <!--<item name="primarycolor">#000000</item>-->
        <!--<item name="secondarycolor">#000000</item>-->
    </style>

    <style name="WindowAnimationTransition">
        <item name="android:activityOpenEnterAnimation">@anim/new_activity_open</item>
        <item name="android:activityOpenExitAnimation">@anim/old_activity_close</item>
        <item name="android:activityCloseEnterAnimation">@anim/old_activity_open</item>
        <item name="android:activityCloseExitAnimation">@anim/new_activity_close</item>

    </style>


    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" >
    </style>

    <style name="AppSearchView" parent="Widget.AppCompat.SearchView" >
        <!-- Query Text Color -->
        <item name="android:textColorPrimary">?attr/textColor</item>
        <item name="android:editTextColor">?attr/textColor</item>
        <!-- Hint Color -->
        <item name="android:textColorHint">?attr/iconGrey</item>
        <!-- Icon Color -->
        <item name="android:tint">?attr/textColor</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowDrawsSystemBarBackgrounds">false</item>
    </style>

    <color name="light_text_color">#000000</color>
    <color name="light_text_color_secondary">#B9B9B9</color>
    <color name="dark_text_color">#ffffff</color>
    <color name="dark_text_color_secondary">#515151</color>
    <color name="light_divider_color">#ADB7C1</color>
    <color name="dark_divider_color">#3C4144</color>
</resources>
