<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Light/Day mode theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/theme_color</item>
        <item name="colorPrimaryDark">#303F9F</item>
        <item name="colorAccent">?attr/colorPrimary</item>

        <item name="primarycolor">#000000</item>
        <item name="secondarycolor">#000000</item>

        <item name="backgroundcolor">#ffffff</item>
        <item name="cardbackground">#ffffff</item>
        <item name="textcolor">#000000</item>
        <item name="textcolorsecondary">#B9B9B9</item>
        <item name="tintcolor">#ffffff</item>
        <item name="buttoncolor">#5E989F</item>


        <item name="navigationBorder">#5E989F</item>

        <item name="android:statusBarColor" tools:targetApi="lollipop">#fcfcfc</item>

        <!--<item name="colorControlNormal">#000000</item>-->
        <!--<item name="android:actionMenuTextColor">#000000</item>-->

        <item name="android:windowAnimationStyle">@style/WindowAnimationTransition</item>

        <!--<item name="android:textColor">#000000</item>-->

    </style>

    <!-- Dark/Night mode theme. -->

    <style name="darktheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/theme_color</item>
        <item name="colorPrimaryDark">#000000</item>
        <item name="colorAccent">?attr/colorPrimary</item>

        <item name="primarycolor">#000000</item>
        <item name="secondarycolor">#000000</item>

        <item name="backgroundcolor">#000000</item>
        <item name="cardbackground">#000000</item>
        <item name="textcolor">#ffffff</item>
        <item name="textcolorsecondary">#515151</item>
        <item name="tintcolor">#ffffff</item>
        <item name="buttoncolor">#2196f3</item>

        <item name="navigationBorder">#5E989F</item>

        <item name="android:statusBarColor" tools:targetApi="lollipop">#000000</item>

        <!--<item name="colorControlNormal">#ffffff</item>-->
        <!--<item name="android:actionMenuTextColor">#ffffff</item>-->

        <item name="android:windowAnimationStyle">@style/WindowAnimationTransition</item>

        <!--<item name="android:textColor">#000000</item>-->

    </style>

    <style name="WindowAnimationTransition">
        <item name="android:activityOpenEnterAnimation">@anim/new_activity_open</item>
        <item name="android:activityOpenExitAnimation">@anim/old_activity_close</item>
        <item name="android:activityCloseEnterAnimation">@anim/old_activity_open</item>
        <item name="android:activityCloseExitAnimation">@anim/new_activity_close</item>

    </style>


    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" >
    </style>

    <style name="AppSearchView" parent="Widget.AppCompat.SearchView" >
        <!-- Query Text Color -->
        <item name="android:textColorPrimary">?attr/textcolor</item>
        <!-- Hint Color -->
        <item name="android:textColorHint">?attr/textcolorsecondary</item>
        <!-- Icon Color -->
        <item name="android:tint">?attr/textcolor</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowDrawsSystemBarBackgrounds">false</item>
    </style>

</resources>
